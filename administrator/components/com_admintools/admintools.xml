	<!-- SQL query files to execute on installation -->
	<install>
		<sql>
			<file charset="utf8" driver="mysql">install.sql</file>
			<file driver="mysql">install.sql</file>
			<file charset="utf8" driver="mysqli">install.sql</file>
			<file driver="mysqli">install.sql</file>
		</sql>
	</install>

	<!-- SQL query files to execute on uninstallation -->
	<uninstall>
		<sql>
			<file charset="utf8" driver="mysql">uninstall.sql</file>
			<file driver="mysql">uninstall.sql</file>
			<file charset="utf8" driver="mysqli">uninstall.sql</file>
			<file driver="mysqli">uninstall.sql</file>
		</sql>
	</uninstall>
	
	<!-- Media files -->
	<media destination="com_admintools" folder="media">
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
	</media>

	<!-- Administrator back-end section -->
	<administration>
		<!-- Administration menu -->
		<menu view="cpanel"
			img="../media/com_admintools/images/admintools-16.png">COM_ADMINTOOLS</menu>

		<!-- Back-end files -->
		<files folder="backend">
			<filename>access.xml</filename>
			<filename>admintools.php</filename>
			<filename>config.xml</filename>
			<filename>index.html</filename>
			<filename>install.sql</filename>
			<filename>restore.php</filename>
			<filename>uninstall.sql</filename>
			<filename>version.php</filename>
			<filename>CHANGELOG.php</filename>

			<folder>classes</folder>
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>language</folder>
			<folder>liveupdate</folder>
			<folder>models</folder>
			<folder>tables</folder>
			<folder>views</folder>
		</files>

