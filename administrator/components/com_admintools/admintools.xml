	<!-- Public front end files -->
	<files folder="frontend">
		<filename>admintools.php</filename>
		<folder>controllers</folder>
		<folder>models</folder>
		<folder>views</folder>
	</files>

	<!-- Front end translation files -->
	<languages folder="translations/frontend">
		<language tag="en-GB">en-GB.com_admintools.ini</language>
		<language tag="bs-BA">bs-BA.com_admintools.ini</language>
